{
  "name": "diox",
  "version": "TRAVIS_TAG",
  "description": "Complete state management for both front and back ends",
  "repository": "https://github.com/openizr/diox",
  "bugs": "https://github.com/openizr/diox/issues",
  "type": "module",
  "main": "./main.js",
  "types": "./main.d.ts",
  "contributors": [
    {
      "name": "Matthieu Jabbour",
      "email": "matthieu.jabbour@gmail.com",
      "homepage": "https://github.com/matthieujabbour"
    }
  ],
  "keywords": [
    "state",
    "management",
    "react",
    "vue",
    "svelte",
    "store",
    "typescript",
    "javascript",
    "frontend",
    "backend",
    "global",
    "ui",
    "flux",
    "router"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/path-to-regexp": "^1.7.0",
    "@types/react": "^17.0.40",
    "coveralls": "^3.1.1",
    "typescript-dev-kit": "^5.0.4"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/typescript-dev-kit/main.js"
    ]
  },
  "dependencies": {
    "path-to-regexp": "^6.2.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "svelte": "^3.46.4",
    "vue": "^3.2.31"
  },
  "tsDevKitConfig": {
    "target": "node",
    "entries": {
      "main": "./scripts/main.ts",
      "extensions/router": "./scripts/extensions/router.ts",
      "connectors/react": "./scripts/connectors/react.ts",
      "connectors/vue": "./scripts/connectors/vue.ts",
      "connectors/svelte": "./scripts/connectors/svelte.ts"
    },
    "srcPath": "src",
    "distPath": "dist",
    "banner": "/*!\n * Copyright (c) Matthieu Jabbour. All Rights Reserved.\n *\n * This source code is licensed under the MIT license found in the\n * LICENSE file in the root directory of this source tree.\n */",
    "env": {
      "development": {},
      "production": {}
    }
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.0.0"
  },
  "scripts": {
    "init": "node_modules/typescript-dev-kit/scripts/init.sh",
    "dev": "cd node_modules/typescript-dev-kit/ && node scripts/dev",
    "build": "cd node_modules/typescript-dev-kit/ && node scripts/build && cd ../../ && yarn run types",
    "test": "cd node_modules/typescript-dev-kit/ && node scripts/test",
    "check": "cd node_modules/typescript-dev-kit/ && node scripts/check",
    "types": "rsync -a --prune-empty-dirs --include '*/' --include '*.d.ts' --exclude '*' --exclude 'index.d.ts' src/scripts/ dist/ && rm dist/index.d.ts",
    "doc": "typedoc --out ../docs/ --exclude \"**/__+(tests|mocks)__/**\" src/scripts/main.ts src/scripts/extensions/router.ts src/scripts/connectors/vue.ts src/scripts/connectors/react.ts src/scripts/connectors/svelte.ts",
    "postinstall": "rm -f node_modules/.eslintcache && test -n \"$POSTINSTALLED\" || POSTINSTALLED=1 yarn add --peer react vue svelte"
  }
}
